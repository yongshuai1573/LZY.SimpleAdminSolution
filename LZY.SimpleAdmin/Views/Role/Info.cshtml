@model t_role
@{
    ViewBag.Title = "角色操作";
}
<!-- Start Page Header -->
<div class="page-header">  
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")">首页</a></li>
        <li><a href="@Url.Action("Index","Role")">角色列表</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="right">
        <a href="@Url.Action("Index","Role")" class="btn btn-default">返回列表</a>
    </div>
</div>
<!-- End Page Header -->
<!-- //////////////////////////////////////////////////////////////////////////// -->
<!-- START CONTAINER -->
<div class="container-padding">
    <!-- Start Row -->
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="panel panel-default">
                <div class="panel-title">
                    角色信息管理
                    <ul class="panel-tools">
                        <li><a class="icon minimise-tool"><i class="fa fa-minus"></i></a></li>
                        <li><a class="icon expand-tool"><i class="fa fa-expand"></i></a></li>
                        <li><a class="icon closed-tool"><i class="fa fa-times"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("RoleSave", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(a => a.p_id)
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="col-sm-2 control-label form-label">角色名称</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(a => a.p_name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(a => a.p_name)
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label form-label">备注</label>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(a => a.p_attribute1, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-default">保存</button>
                            </div>
                        </div>
                        <div style="color:red;">
                            @Html.ValidationSummary(true)
                        </div>

                    }

                </div>

            </div>
        </div>
    </div>
    <!-- End Row -->
</div>
<!-- END CONTAINER -->
<!-- //////////////////////////////////////////////////////////////////////////// -->


@model  PagedList<t_role>
@{
    ViewBag.Title = "角色管理";
}

<div class="container-padding">
    <!-- Start Page Header Right Div -->
    <div class="page-header">
        <h1 class="title">@ViewBag.Title</h1>
        <ol class="breadcrumb">
            <li class="active">系统角色定义、菜单分配。</li>
        </ol>
        <div class="right">
        
        </div>
    </div>
    <!-- End Page Header Right Div -->
    <!-- Start Row -->
    <div class="row">
        <!-- Start Panel -->
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-action="Index" asp-controller="Para" method="get" class="form-inline" id="searchForm">

                        <div class="form-group">
                            <input class="form-control" value="@System.Web.HttpContext.Current.Request.Query["s"]" name="s" placeholder="名称" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i>搜索</button>
                        </div>
                        <div class="form-group pull-right">
                            <a href="@Url.Action("Info")" class="btn btn-default"><i class="fa fa-user"></i>创建新角色</a>
                        </div>

                       </form>
                </div>
            </div>
            <div id="dataTable">
                <partial name="_ListTable" model="Model" />
                <div class="text-center">
                    <nav class="pull-right">
                        @Html.Pager(Model,new PagerOptions
                   {
                       AutoHide = false,
                       PageIndexParameterName = "p",
                       CssClass = "pagination",
                       CurrentPagerItemTemplate = "<li class=\"active\"><a href=\"#\">{0}</a></li>",
                       DisabledPagerItemTemplate = "<li class=\"disabled\"><a>{0}</a></li>"
                   })
                    </nav>
                </div>
            </div>
        </div>

        <!-- End Panel -->
    </div>
    <!-- End Row -->
</div>
@section js
{
 

    <script type="text/javascript">
        function onComplate(obj) {
            if (obj.success) {
                toastr.success("操作成功！");
                $("#searchForm").submit();
                //操作成功，
            }

            else {
                toast.error("操作失败！");

            }
        }
    </script>
}